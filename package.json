{
  "name": "wine-club-saas",
  "version": "0.1.0",
  "private": true,
  "description": "B2B2C Wine Club SaaS Platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "dotenv -e .env.local -- sh -c 'pnpm --filter web dev & pnpm --filter embed dev'",
    "build": "dotenv -e .env.local -- pnpm --filter web build && dotenv -e .env.local -- pnpm --filter embed build",
    "db:generate": "dotenv -e .env.local -- pnpm --filter db generate",
    "db:push": "dotenv -e .env.local -- pnpm --filter db push",
    "db:migrate": "dotenv -e .env.local -- pnpm --filter db migrate",
    "db:seed": "dotenv -e .env.local -- pnpm --filter db seed",
    "db:studio": "dotenv -e .env.local -- pnpm --filter db studio",
    "cron:apply-prices": "dotenv -e .env.local -- tsx scripts/apply-dynamic-prices.ts",
    "cron:check-missing-prices": "dotenv -e .env.local -- tsx scripts/check-missing-dynamic-prices.ts",
    "lint": "pnpm --parallel lint",
    "test": "dotenv -e .env.local -- pnpm --parallel test",
    "test:e2e": "dotenv -e .env.local -- pnpm --filter web test:e2e"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "dotenv-cli": "^11.0.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
